{
  "type": "mongodb",
  "host": "localhost",
  "port": 27017,
  "database": "angular-todo",
  "entities": ["./src/app/models/*.{ts,js}"],
  "migrations": ["./src/database/migrations/*.{ts,js}"],
  "useUnifiedTopology": true,
  "cli": {
    "entitiesDir": "./src/app/models/*.ts",
    "migrationsDir": "./src/database/migrations/*.ts"
  }
}
